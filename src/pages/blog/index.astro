---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<BaseLayout
  title="All Posts · Astro Minimal JS Lab"
  description="Browse every post in the Astro Minimal JS Lab content collection."
>
  <section class="panel" aria-labelledby="blog-index-heading">
    <header class="panel-heading">
      <div>
        <p id="blog-index-heading" class="panel-title">Blog archive</p>
        <p class="panel-subtitle">
          A small but focused set of posts that walk through why this project uses Astro and how the
          static site is structured.
        </p>
      </div>
      <span class="pill">Total posts · {posts.length}</span>
    </header>

    <div class="post-list">
      {posts.map((post) => (
        <PostCard
          href={`/blog/${post.slug}/`}
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          tags={post.data.tags}
        />
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .panel-subtitle {
    margin: 0.4rem 0 0;
    font-size: 0.9rem;
    color: #d1d5db;
    max-width: 36rem;
  }

  .post-list {
    display: grid;
    grid-template-columns: minmax(0, 1fr);
    gap: 1rem;
  }
</style>


